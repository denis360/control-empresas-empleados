<div class="card bg-dark rounded-0 p-3 text-light">
  {{#if name}}
    <div class="card-header text-center">
      <h4>Reporte: {{name}}</h4>
    </div>
  {{/if}}
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <form action="/reports/company" method="POST">
          <div class="mb-3 d-flex">
            <input type="text" name="id_company" class="m-1 form-control bg-dark rounded-0 text-light" autofocus value="{{id}}" placeholder="C贸digo empresa" required>
            <button class="btn btn-primary rounded-0 m-1">Buscar</button>
          </div>
        </form>
        <div class="card bg-dark rounded-0 text-light">
          <div class="card-header text-center">
            <h4>Reportes</h4>
          </div>
          {{#if content.reports}}
            <table class="table table-hover table-dark m-0">
              {{#each content.reports}}
                <tr onclick="location.href='/reports/{{../id}}/name={{../id}}_{{this}}'">
                  <td>{{this}}</td>
                </tr>
              {{/each}}
            </table>
          {{else}}
            <div class="row">
              <div class="col-md-12 mx-auto text-center">
                <h5 class="m-3">!No hay reportes!</h5>
              </div>
            </div>
          {{/if}}
        </div>
      </div>
      <div class="col-md-8">
        <div class="card bg-dark text-light rounded-0">
          <table class="table table-striped table-hover table-dark m-0">
            <thead>
              <tr>
                <th scope='col'>C贸digo</th>
                <th scope='col'>Nombre</th>
                <th scope='col'>Cargo</th>
                <th scope='col'>Status</th>
                <th scope='col'>Estado</th>
                <th scope='col'>Estado Salario</th>
                <th scope='col'>Salario</th>
                <th scope='col'>Descripci贸n</th>
                <th scope='col'>C贸digo empresa</th>
              </tr>
            </thead>
            <tbody>
              {{#if reports}}
                {{#each reports}}
                  <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.job}}</td>
                    <td>{{this.status}}</td>
                    <td>{{this.state}}</td>
                    <td>{{this.stateSalary}}</td>
                    <td>{{this.salary}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.company}}</td>
                  </tr>
                {{/each}}
              {{/if}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
