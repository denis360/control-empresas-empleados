<div class="card bg-dark rounded-0 p-3 text-light">
  {{#if name}}
    <div class="card-header text-center">
      <h4>Planilla: {{name}}</h4>
    </div>
  {{/if}}
  <div class="row">
    <div class="col-md-4">
      <div class="card bg-dark rounded-0 text-light">
        <div class="card-header text-center">
          <h4>Planillas</h4>
        </div>
        <table class="table table-hover table-striped table-dark">
          {{#if content.sheets}}
            {{#each content.sheets}}
              <tr onclick="location.href='/sheets/name={{this}}'">
                <td>{{this}}</td>
              </tr>
            {{/each}}
          {{/if}}
        </table>
      </div>
    </div>
    <div class="col-md-8">
      <div class="card bg-dark text-light">
        <table class="table table-striped table-hover table-dark">
          <thead>
            <tr>
              <th scope='col'>Codigo</th>
              <th scope='col'>Nombre</th>
              <th scope='col'>Cargo</th>
              <th scope='col'>Status</th>
              <th scope='col'>Estado</th>
              <th scope='col'>Estado Salario</th>
              <th scope='col'>Salario</th>
              <th scope='col'>Descripci√≥n</th>
              <th scope='col'>Empresa</th>
            </tr>
          </thead>
          <tbody>
            {{#if sheets}}
              {{#each sheets}}
                <tr>
                  <td>{{this.id}}</td>
                  <td>{{this.name}}</td>
                  <td>{{this.job}}</td>
                  <td>{{this.status}}</td>
                  <td>{{this.state}}</td>
                  <td>{{this.stateSalary}}</td>
                  <td>{{this.salary}}</td>
                  <td>{{this.description}}</td>
                  <td>{{this.company}}</td>
                </tr>
              {{/each}}
            {{/if}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
